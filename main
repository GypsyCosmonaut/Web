#!/usr/bin/env bash

echo "first name"
read fname
echo "last name"
read lname

nohup firefox http://www.411.com/name/$fname-$lname 			1>| /tmp/files/nohup.out 2>&1 &
sleep 4
nohup firefox -new-tab http://www.cvgadget.com/person/$fname/$lname 	1>| /tmp/files/nohup.out 2>&1 &
sleep 1
nohup firefox -new-tab http://www.peekyou.com/$fname'_'$lname 	1>| /tmp/files/nohup.out 2>&1 &
sleep 1
nohup firefox -new-tab https://pipl.com/search/?q=$fname+$lname 	1>| /tmp/files/nohup.out 2>&1 &
sleep 1
nohup firefox -new-tab http://www.spokeo.com/$fname-$lname 	1>| /tmp/files/nohup.out 2>&1 &
sleep 1
nohup -new-tab http://www.zabasearch.com/people/$fname+$lname 1>| /tmp/files/nohup.out 2>&1 &

read -p 'http[s]://URI : ' uri_


gnome-terminal -x bash -c "dirb ""${uri_}"" -w -f | cat -A | sed -n 's/.*+ \(.*\) .*/\1/p'; bash"
 
firefox $(cat <(dirb "${uri_}" -w -f | cat -A | sed -n 's/.*+ \(.*\) .*/\1/p') | tr '\n' ' ') & #directories

gnome-terminal -x bash -c "wget ""${uri_}""/robots.txt 2> /dev/null -O >(sed -n 's/^Disallow[^:]*: \(.*\)/\1/p') | grep -v ""^/$"" | sort | uniq ; bash"

firefox view-source:"${uri_}" $(cat <(wget "${uri_}"/robots.txt 2> /dev/null -O >(sed -n 's/^Disallow[^:]*: \(.*\)/'"${uri_//\//\\/}"'\1/p') | grep -v "^${uri_}/$" | sort | uniq) | tr '\n' ' ') & #robots.txt

gnome-terminal -x bash -c "curl -i ""${uri_}""; bash"

whois $(echo "${uri_}" | sed 's/.*\.\(.*\..*\)/\1/')

dnsenum $(echo "${uri_}" | sed 's/.*\.\(.*\..*\)/\1/')





